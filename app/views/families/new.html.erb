<div class="container">
  <div class="row py-5">
    <h2 class="text-secondary mt-3">Add Family</h2>
    <%= form_for @families do |f| %>
      <div class="form-group col-6 my-3">
        <%= f.label :family_name %>
        <%= f.text_field :family_name, class: 'form-control' %>
      </div>

      <div class="form-group col-6 my-3">
        <%= f.label :family_members %>
        <%= f.number_field :family_members, class: 'form-control' %>
      </div>

      <%= f.submit 'Save', clas: 'btn btn-success' %>
    <% end %>
  </div>
</div>